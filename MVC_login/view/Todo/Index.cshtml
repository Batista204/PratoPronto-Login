@model IEnumerable<PratoPronto.Models.Prato>

@{
    ViewBag.Title = "Cardápio PratoPronto";
}

<h2>Cardápio PratoPronto</h2>

<p>
    @Html.ActionLink("Adicionar Novo Prato", "Create")
</p>

<table class="table">
    <tr>
        <th>Foto</th>
        <th>Nome</th>
        <th>Categoria</th>
        <th>Preço</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@item.Foto" alt="Foto" width="100" />
        </td>
        <td>@item.Nome</td>
        <td>@item.Categoria</td>
        <td>@item.Preco.ToString("C")</td>
        <td>
            @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Excluir", "Delete", new { id = item.Id })
        </td>
    </tr>
}
</table>
